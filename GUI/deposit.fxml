<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.DepositViewController">
   <children>
      <VBox spacing="15" alignment="TOP_CENTER" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <!-- Header -->
            <Label text="Cash Deposit Form" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            
            <!-- Account Information -->
            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-pref-width: 500;">
               <Label text="Account Information" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
               
               <GridPane hgap="10" vgap="10">
                  <columnConstraints>
                     <ColumnConstraints prefWidth="150" />
                     <ColumnConstraints prefWidth="300" />
                  </columnConstraints>
                  
                  <children>
                     <Label text="Account Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                     <TextField fx:id="accountNumberField" promptText="Enter account number" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                     
                     <Label text="Account Holder:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                     <TextField fx:id="accountNameField" promptText="Account holder name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                     
                     <Label text="Account Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                     <ComboBox fx:id="accountTypeCombo" promptText="Select account type" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                  </children>
               </GridPane>
            </VBox>

            <!-- Deposit Details -->
            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-pref-width: 500;">
               <Label text="Deposit Details" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
               
               <GridPane hgap="10" vgap="10">
                  <columnConstraints>
                     <ColumnConstraints prefWidth="150" />
                     <ColumnConstraints prefWidth="300" />
                  </columnConstraints>
                  
                  <children>
                     <Label text="Amount:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                     <TextField fx:id="amountField" promptText="0.00" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                     
                     <Label text="Source of Funds:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                     <ComboBox fx:id="fundSourceCombo" promptText="Select source" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                     
                     <Label text="Deposit Method:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                     <ComboBox fx:id="depositMethodCombo" promptText="Select method" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                  </children>
               </GridPane>
            </VBox>

            <!-- Additional Notes -->
            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-pref-width: 500;">
               <Label text="Additional Notes:" style="-fx-font-weight: bold;"/>
               <TextArea fx:id="notesArea" promptText="Enter any additional notes..." style="-fx-pref-width: 500; -fx-pref-height: 60;" wrapText="true"/>
            </VBox>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
               <Button fx:id="submitButton" text="Submit Deposit" style="-fx-pref-width: 140;"/>
               <Button fx:id="clearButton" text="Clear Form" style="-fx-pref-width: 120;"/>
               <Button fx:id="cancelButton" text="Cancel" style="-fx-pref-width: 100;"/>
            </HBox>

            <!-- Status Message -->
            <Label fx:id="statusLabel" style="-fx-alignment: CENTER;" maxWidth="500"/>
         </children>
      </VBox>
   </children>
</AnchorPane>