<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #283593, #303f9f);" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="LoginBoundary">
    
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 20;">
            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text=" Banking Solutions">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
        </HBox>
    </top>
    
    <!-- Center Content - Side by Side -->
    <center>
        <HBox alignment="CENTER" spacing="0" style="-fx-padding: 50;">
            
            <!-- Left Panel - Login -->
            <VBox alignment="CENTER" prefWidth="450" spacing="25" style="-fx-background-color: white; -fx-background-radius: 10 0 0 10; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
                
                <VBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: #1a237e; -fx-font-weight: bold;" text="Customer Login">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="Sign in to your account" />
                </VBox>
                
                <VBox alignment="CENTER" prefWidth="350" spacing="20">
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Username" />
                        <TextField fx:id="usernameField" prefHeight="45" prefWidth="350" promptText="Enter your username" style="-fx-background-radius: 5; -fx-font-size: 14;" />
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Password" />
                        <PasswordField fx:id="passwordField" prefHeight="45" prefWidth="350" promptText="Enter your password" style="-fx-background-radius: 5; -fx-font-size: 14;" />
                    </VBox>
                    
                    <!-- Added onAction for login -->
                    <Button fx:id="loginButton" 
                            prefHeight="50" 
                            prefWidth="350" 
                            style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 5;" 
                            text="Sign In" 
                            onAction="#handleLogin"/>
                    
                    <Label fx:id="loginMessage" style="-fx-text-fill: #d32f2f; -fx-wrap-text: true; -fx-alignment: center;" />
                    
                    <Label style="-fx-text-fill: #1a237e; -fx-cursor: hand; -fx-underline: true; -fx-font-size: 14;" text="Forgot password?" />
                </VBox>
            </VBox>
            
            <!-- Right Panel - New Customer -->
            <VBox alignment="CENTER" prefWidth="450" spacing="25" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 0 10 10 0; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
                
                <VBox alignment="CENTER" spacing="10">
                    <Label style="-fx-text-fill: #1a237e; -fx-font-weight: bold;" text="New to Banking Solutions?">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-wrap-text: true; -fx-alignment: center;" text="Create your account today and enjoy our premium banking services" />
                </VBox>
                
                <VBox alignment="CENTER" prefWidth="350" spacing="20">
                    <VBox alignment="CENTER" spacing="15">
                        <Label style="-fx-text-fill: #333; -fx-font-size: 14;" text="✓ No minimum balance required" />
                        <Label style="-fx-text-fill: #333; -fx-font-size: 14;" text="✓ Free online banking" />
                        <Label style="-fx-text-fill: #333; -fx-font-size: 14;" text="✓ 24/7 customer support" />
                        <Label style="-fx-text-fill: #333; -fx-font-size: 14;" text="✓ Mobile banking app" />
                        <Label style="-fx-text-fill: #333; -fx-font-size: 14;" text="✓ Secure transactions" />
                    </VBox>
                    
                    <!-- Added onAction for open account -->
                    <Button fx:id="openAccountButton" 
                            prefHeight="50" 
                            prefWidth="350" 
                            style="-fx-background-color: #00c853; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 5;" 
                            text="Open New Account" 
                            onAction="#handleOpenAccount"/>
                    
                    <Label style="-fx-text-fill: #666; -fx-font-size: 12; -fx-font-style: italic;" text="It only takes 5 minutes to get started!" />
                </VBox>
            </VBox>
            
        </HBox>
    </center>
    
    <!-- Bottom Footer -->
    <bottom>
        <VBox alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.2); -fx-padding: 15;">
            <Label prefHeight="18.0" prefWidth="326.0" style="-fx-text-fill: white; -fx-font-size: 12;" text="© 2024 Banking Solutions. All rights reserved. Member FDIC" />
        </VBox>
    </bottom>
</BorderPane>
