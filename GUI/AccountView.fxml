<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="boundary.AccountViewController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Top Header -->
    <top>
        <HBox style="-fx-background-color: #1a237e; -fx-padding: 20;" alignment="CENTER_LEFT">
            <Label text="Banking Solutions" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24;" />
            <Label fx:id="welcomeLabel" text="Welcome" style="-fx-text-fill: white; -fx-font-size: 16; -fx-padding: 0 0 0 20;" />
        </HBox>
    </top>
    
    <!-- Center Content -->
    <center>
        <HBox spacing="30" style="-fx-padding: 30;">
            
            <!-- Left Sidebar - Quick Actions -->
            <VBox spacing="15" prefWidth="250" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                <Label text="Quick Actions" style="-fx-text-fill: #1a237e; -fx-font-weight: bold; -fx-font-size: 18;" />
                
                <VBox spacing="10">
                    <Button fx:id="viewAccountsButton" text="View Accounts" onAction="#handleViewAccounts"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold;" />
                    
                    <Button fx:id="transferButton" text="Transfer Funds" onAction="#handleTransfer"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;" />
                    
                    <Button fx:id="depositButton" text="Deposit Money" onAction="#handleDeposit"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #1565c0; -fx-text-fill: white; -fx-font-weight: bold;" />
                    
                    <Button fx:id="withdrawButton" text="Withdraw Money" onAction="#handleWithdraw"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #ef6c00; -fx-text-fill: white; -fx-font-weight: bold;" />
                    
                    <Button fx:id="payBillsButton" text="Pay Bills" onAction="#handlePayBills"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #6a1b9a; -fx-text-fill: white; -fx-font-weight: bold;" />
                    
                    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold;" />
                </VBox>
            </VBox>
            
            <!-- Main Content Area -->
            <VBox spacing="20" prefWidth="650">
                
                <!-- Account Summary -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                    <Label text="Account Summary" style="-fx-text-fill: #1a237e; -fx-font-weight: bold; -fx-font-size: 20;" />
                    
                    <HBox spacing="25">
                        <!-- Total Balance -->
                        <VBox spacing="8" style="-fx-background-color: #e3f2fd; -fx-background-radius: 8; -fx-padding: 20; -fx-pref-width: 180;">
                            <Label text="Total Balance" style="-fx-text-fill: #1a237e; -fx-font-size: 14;" />
                            <Label fx:id="totalBalanceLabel" text="0.00" style="-fx-text-fill: #1a237e; -fx-font-weight: bold; -fx-font-size: 22;" />
                        </VBox>
                        
                        <!-- Customer's Account -->
                        <VBox spacing="8" style="-fx-background-color: #e8f5e9; -fx-background-radius: 8; -fx-padding: 20; -fx-pref-width: 180;">
                            <Label fx:id="accountTypeLabel" text="Account Type" style="-fx-text-fill: #2e7d32; -fx-font-size: 14;" />
                            <Label fx:id="accountBalanceLabel" text="0.00" style="-fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-font-size: 20;" />
                            <Label fx:id="accountNumberLabel" text="Account: " style="-fx-text-fill: #666; -fx-font-size: 12;" />
                        </VBox>
                        
                        <!-- Account Status -->
                        <VBox spacing="8" style="-fx-background-color: #fff3e0; -fx-background-radius: 8; -fx-padding: 20; -fx-pref-width: 180;">
                            <Label text="Account Status" style="-fx-text-fill: #ef6c00; -fx-font-size: 14;" />
                            <Label fx:id="accountStatusLabel" text="Active" style="-fx-text-fill: #ef6c00; -fx-font-weight: bold; -fx-font-size: 20;" />
                            <Label fx:id="memberSinceLabel" text="Member since: " style="-fx-text-fill: #666; -fx-font-size: 12;" />
                        </VBox>
                    </HBox>
                </VBox>
                
                <!-- Quick Transfer Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                    <Label text="Quick Transfer" style="-fx-text-fill: #1a237e; -fx-font-weight: bold; -fx-font-size: 20;" />
                    
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox spacing="5">
                            <Label text="From Account" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                            <ComboBox fx:id="fromAccountCombo" prefWidth="180" prefHeight="40" />
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="To Account" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                            <TextField fx:id="toAccountField" prefWidth="180" prefHeight="40" promptText="Account number" />
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="Amount" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                            <TextField fx:id="transferAmountField" prefWidth="120" prefHeight="40" promptText="0.00" />
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text=" " />
                            <Button fx:id="quickTransferButton" text="Transfer" onAction="#handleTransfer"
                                    prefWidth="100" prefHeight="40"
                                    style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;" />
                        </VBox>
                    </HBox>
                    
                    <Label fx:id="transferMessageLabel" style="-fx-text-fill: #d32f2f; -fx-wrap-text: true;" />
                </VBox>
                
                <!-- Recent Activity -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                    <Label text="Recent Activity" style="-fx-text-fill: #1a237e; -fx-font-weight: bold; -fx-font-size: 20;" />
                    
                    <VBox spacing="10" fx:id="recentActivityList">
                        <Label text="No recent transactions" style="-fx-text-fill: #666; -fx-padding: 5; -fx-font-style: italic;" />
                    </VBox>
                </VBox>
                
            </VBox>
        </HBox>
    </center>
    
    <!-- Bottom Footer -->
    <bottom>
        <HBox style="-fx-background-color: #e0e0e0; -fx-padding: 15;" alignment="CENTER">
            <Label text="2024 Banking Solutions. Member FDIC. All rights reserved." style="-fx-text-fill: #666; -fx-font-size: 12;" />
        </HBox>
    </bottom>
</BorderPane>